{
  "name": "trading-places",
  "version": "1.0.0",
  "description": "FoundryVTT module for trading",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "harness": "node tests/foundry-harness/run.js",
    "harness:ui": "node tests/foundry-harness/run.js --ui",
    "harness:ci": "HARNESS_SEED=42 node tests/foundry-harness/run.js",
    "harness:buying": "node tests/foundry-harness/run.js tests/foundry-harness/scenarios/buying-flow.js",
    "harness:availability": "node tests/foundry-harness/run.js tests/foundry-harness/scenarios/availability-only.js"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "babel-jest": "^30.1.2",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^30.1.2",
    "express": "^4.18.0",
    "handlebars": "^4.7.0",
    "open": "^8.4.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "type": "module"
}
